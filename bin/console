#!/bin/sh
# Run a Ruby REPL.
 
set -e
 
cd $(dirname "$0")/..
PRY_PATH=$(which pry)
echo $PRY_PATH
 
if [ -x $PRY_PATH ] 
then
  exec bundle exec $PRY_PATH -Ilib -r activerecord-sqlserver-adapter -r console
else
  red='\033[0;31m'
  NC='\033[0m'
  echo "${red}Pry was not found or not executable. Make sure \`which pry\` returns an executable.${NC}"
 
fi